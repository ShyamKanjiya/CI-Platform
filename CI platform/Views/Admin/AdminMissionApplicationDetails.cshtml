@model adminMissionApplicationDetails;

@{
    ViewData["Title"] = "MissionApplicationDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid">
    <div class="border-bottom">
        <h1 class="heading">Mission Application</h1>
    </div>
    <div class="d-flex justify-content-between mt-5 mb-4">
        <div class="input-group rounded position-relative search-bar">
            <input type="search" class="form-control rounded" placeholder="Search" id="search-bar" />
            <span class="search-icon"><i class="bi bi-search"></i></span>
        </div>
        <div>
            <button class="btn add-btn rounded-pill">
                <i class="bi bi-plus"></i>
                <span>Add</span>
            </button>
        </div>
    </div>
    <div class="table-div">
        <table id="userTable" class="table">
            <thead>
                <tr>
                    <th>Mission Title</th>
                    <th>Mission Id</th>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>Applied Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MissionAppLists)
                {
                    <tr>
                        <td>@item.Mission.Title</td>
                        <td>@item.MissionId</td>
                        <td>@item.UserId</td>
                        <td>@item.User.FirstName @item.User.LastName</td>
                        <td>@item.AppliedAt.ToString("dd/mm/yyyy")</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <span>
                                <button class="btn border-0 bg-transparent approve-btn">
                                    <i class="bi bi-check-circle text-success"></i>
                                </button>
                            </span>
                            <span>
                                <button class="btn border-0 bg-transparent decline-btn">
                                    <i class="bi bi-x-circle text-danger"></i>
                                </button>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var dataTable = $('#userTable').DataTable({
            "pageLength": 5,
            pagingType: 'full_numbers',
            oLanguage: {
                oPaginate:
                {
                    sNext: '<i class="bi bi-chevron-right"></i>',
                    sPrevious: '<i class="bi bi-chevron-left"></i>',

                }
            },
            "language": {
                "paginate": {
                    "last": '<i class="bi bi-chevron-double-right"></i>',
                    "first": '<i class="bi bi-chevron-double-left"></i>'
                }
            }
        });
        $('#search-bar').keyup(function () {
            dataTable.search(this.value).draw();
        });
    });
</script>