<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CI_platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @await RenderSectionAsync("CssValue", required: false)
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CI_platform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plateformLandingPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/storyLandingPage.css" asp-append-version="true"/>
</head>
<body>

    <header>
        <!-- navigation bar -->
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container-fluid " id="top-header-row">
                <div id="nav-bar">
                    <button class="navbar-toggler border-0" href="#menubar" role="button" data-bs-toggle="offcanvas"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                            id="navbar-toggler-btn">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="offcanvas offcanvas-start" tabindex="-1" id="menubar" aria-labelledby="offcanvasExampleLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Menu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body" id="offcanvas-body" style="margin-left:3vw;">
                            <ul class="navbar-nav nav-item">
                                <a class="nav-link" aria-current="page" href="#" >Stories</a>
                            </ul>
                            <ul class="navbar-nav nav-item dropdown">
                                <a class="nav-link" href="#" id="navbarScrollingDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Privacy
                                    <img src="~/images/drop-down.png" style="margin-left:5px"/>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                    <li><a class="dropdown-item" href="#">First Link</a></li>
                                    <li><a class="dropdown-item" href="#">Second Link</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="#">Third Link</a></li>
                                </ul>
                            </ul>
                        </div>
                    </div>
                </div>

                <div id="nav-bar">
                    <ul class="navbar-nav d-flex">
                        <li class="nav-item dropdown">
                            <a class="nav-link profile-link-part" href="#" id="navbarScrollingDropdown " role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/images/user-img.png" class="rounded-circle" height="35" width="35" alt="Profile pic"
                                     loading="lazy"/>
                                <span style="margin-left:5px;">Evan Donohue</span>
                                <img src="~/images/drop-down.png" style="margin-left:5px" />
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li><a class="dropdown-item" href="#">First Link</a></li>
                                <li><a class="dropdown-item" href="#">Second Link</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Third Link</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- header bar -->
        <div class="navbar-expand-md container-fluid border-top border-bottom bg-light px-0">
            
            <div class="row container-fluid mx-auto px-0">
                
                <div class="col-10 col-md-5 py-2">
                    <form class="d-flex" id="search-inp" >
                        <input class="form-control ms-0 me-2 border-0 bg-light" type="search" placeholder="Search mission..."
                               aria-label="Search">
                    </form>
                </div>
                
                <button class="col-2 navbar-toggler border-0  filter-offcanvas" href="#filters" role="button"
                        data-bs-toggle="offcanvas" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation" id="navbar-toggler-btn">
                    <img src="/images/filter.png" alt="">
                </button>

                <div class="offcanvas offcanvas-start" tabindex="-1" id="filters" aria-labelledby="offcanvasExampleLabel">
                    
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Filters</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>

                    <div class="offcanvas-body">
                        <div class="col-auto py-2 searchByFilter ">
                            <ul class="navbar-nav filter-types " style="--bs-scroll-height: 100px; ">
                                <li class="nav-item dropdown w-100">
                                    <a class="nav-link d-flex justify-content-between align-items-center px-3" href="#" id="navbarScrollingDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>Country </span>
                                        <img src="~/images/drop-down.png" style="margin-left:5px"/>
                                    </a>
                                    <ul class="dropdown-menu scrollable-menu" aria-labelledby="navbarScrollingDropdown">
                                        <li><a class="dropdown-item" href="#">India</a></li>
                                        <li><a class="dropdown-item" href="#">USA</a></li>
                                        <li><a class="dropdown-item" href="#">Japan</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                        <div class="col-auto py-2 searchByFilter">
                            <ul class="navbar-nav filter-types" style="--bs-scroll-height: 100px;">
                                <li class="nav-item dropdown w-100">
                                    <a class="nav-link d-flex justify-content-between align-items-center px-3" href="#" id="navbarScrollingDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>City</span>
                                        <img src="~/images/drop-down.png" style="margin-left:5px" />
                                    </a>
                                    <ul class="dropdown-menu scrollable-menu" aria-labelledby="navbarScrollingDropdown">
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="Ahmedabad" class="checkbox">Ahmedabad
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="New York" class="checkbox">New York
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="Tokyo" class="checkbox">Tokyo
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="col-auto py-2 searchByFilter">
                            <ul class="navbar-nav filter-types" style="--bs-scroll-height: 100px;">
                                <li class="nav-item dropdown w-100">
                                    <a class="nav-link d-flex justify-content-between align-items-center px-3" href="#" id="navbarScrollingDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>Theme</span>
                                        <img src="~/images/drop-down.png" style="margin-left:5px"/>
                                    </a>
                                    <ul class="dropdown-menu scrollable-menu" aria-labelledby="navbarScrollingDropdown">
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="Environment" class="checkbox">Environment
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="Child support" class="checkbox">Child support
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="Healthcare" class="checkbox">Healthcare
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="col-auto py-2 searchByFilter">
                            <ul class="navbar-nav filter-types" style="--bs-scroll-height: 100px;">
                                <li class="nav-item dropdown w-100">
                                    <a class="nav-link d-flex justify-content-between align-items-center px-3" href="#" id="navbarScrollingDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>Skills</span>
                                        <img src="~/images/drop-down.png" style="margin-left:5px" />
                                    </a>
                                    <ul class="dropdown-menu scrollable-menu" aria-labelledby="navbarScrollingDropdown">
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="skill1" class="checkbox">skill1
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="skill2" class="checkbox">skill2
                                        </li>
                                        <li class="dropdown-item">
                                            <input type="checkbox" id="" value="skill3" class="checkbox">skill3
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer1">
        <div class="container">
            <a href="#" class="text-start">Privacy Policy</a>
        </div>
    </footer>


    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
    </ul>
  </footer>

    <script type="text/javascript" src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js' asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/platfromLandingPage.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
