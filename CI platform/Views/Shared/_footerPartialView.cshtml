<!-- Footer -->
<footer class="border-top footer1">
    <div class="container d-flex">
        <a class="text-start nav-link" asp-controller="User" asp-action="VolunteerPolicy">Privacy Policy</a>
        <a class="text-start nav-link ms-4" data-bs-toggle="modal" data-bs-target="#contectUs" onclick="ContectUsGetData()">
            Contect Us
        </a>
        <div class="modal fade" id="contectUs" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div id="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Please input below Volunteering Hours</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="form-group mb-3">
                                <label class="form-label">Name</label>
                                <input class="form-control" id="contectName" value="" disabled placeholder="Please login to get info">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Email</label>
                                <input class="form-control" id="contectEmail" value="" disabled placeholder="Please login to get info">
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">Subject</label>
                                <input class="form-control" id="contectSubject" placeholder="Enter your Subject" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" id="contectMessage" placeholder="Enter your Message" style="min-height:15vh;" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn border px-4" style="border-radius:50px" data-bs-dismiss="modal">Cancel</button>
                            <button class="btn border-warning text-warning px-4" style="border-radius:50px;" onclick="ContectUsPostData()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>