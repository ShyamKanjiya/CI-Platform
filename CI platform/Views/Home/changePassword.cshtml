@model CI_platform.Entities.ViewModels.userChangePasswordModel;
@{
    ViewData["Title"] = "volunteeringMissionPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/changePass.css">
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <title>Change Password</title>
</head>

<body>
    <div class="container-fluid">

        <div class="row">

            <div id="carouselExampleIndicators" class="carousel slide carousel-fade col-lg-8" data-ride="carousel">
                <div class="carousel-indicators">
                    @foreach (var banner in Model.banners)
                    {
                        if (banner.SortOrder == 1)
                        {
                            <button type="button" id="indi" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@banner.SortOrder - 1" class="active" aria-current="true" aria-label="Slide @banner.SortOrder"></button>
                        }
                        else
                        {
                            <button type="button" id="indi" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@banner.SortOrder - 1" aria-label="Slide @banner.SortOrder"></button>
                        }
                    }
                </div>
                <ol class="carousel-indicators">
                    @foreach (var banner in Model.banners)
                    {
                        if (banner.SortOrder == 1)
                        {
                            <li data-target="#carouselExampleIndicators" data-bs-slide-to="@banner.SortOrder - 1" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-bs-slide-to="@banner.SortOrder - 1"></li>
                        }
                    }
                </ol>

                <div class="carousel-inner">
                    @foreach (var banner in Model.banners)
                    {
                        if (banner.SortOrder == 1)
                        {
                            <div class="carousel-item active">
                                <img src="@banner.Image" alt="Active slide">
                                <div class="carousel-caption d-block d-none d-sm-block">
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@banner.Image" alt="Slide">
                                <div class="carousel-caption d-block d-none d-sm-block">
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>


            <div id="form" class="col-lg-4">
                <form class="my-auto" asp-controller="Home" asp-action="changePassword">
                    <div style="text-align: center;">
                        <h2>New Password</h2>
                        <p style="font-size: 12px">Please enter a new password in the fields below.</p>
                    </div>

                    <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" hidden>
                    <input type="text" asp-for="Token" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" hidden>

                    <div class="form-group">
                        <label for="InputPassword1" class="form-label mt-3">New Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="InputPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="InputPassword1" class="form-label mt-3">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="InputCheckPassword">
                    </div>
                    <button id="ChangeBtn" class="btn btn-primary col-12 py-0" type="submit">Change Passoword</button>

                    <div class="mt-3" style="text-align: center; font-size:12px;">
                        <a asp-area="" asp-controller="home" asp-action="Login">Login?</a>
                    </div>
                </form>
                <div class="PP text-center mx-auto">
                    <p> <a href="">Privacy Policy</a></p>
                </div>
            </div>

        </div>

    </div>

</body>

</html>